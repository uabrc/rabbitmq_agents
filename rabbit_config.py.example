Exchange = 'RegUsr'
User = 'reggie'
Password = 'CHANGE_IT_TO_YOUR_OWN_PASSWORD'
VHost = '/'
Server = 'ohpc'
Port = 5672

# time delay to let account creation finish
# to avoid concurrency with downstream agents
